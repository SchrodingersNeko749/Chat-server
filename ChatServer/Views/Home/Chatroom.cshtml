<header>
    <script src="/js/signalr/dist/browser/signalr.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/basic_ui.css">
    <link rel="stylesheet" type="text/css" href="/css/chat.css">
    <script type="text/javascript" src="/js/chatroom/chat.js"></script>
    <script type="text/javascript" src="/js/chatroom/messageInput.js"></script>
    <script type="text/javascript" src="/js/chatroom/contacts.js"></script>
    <script type="text/javascript" src="/js/chatroom/connection.js"></script>
    <script type="text/javascript" src="/js/login/form.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/basic_ui.css">


</header>
<body>
    <div id="app">
        <div id="contacts">
            <div class="title">Contacts</div>
        </div>
        <div id="chat">
            <div id="messages" class="container">
            </div>
            <div id="input-container">
                <div id="input">
                    <input id="input-text" onkeydown="inputKey(this, event)">
                </div>
            </div>
        </div>
    </div>
    <div class="modal">
        <div class="modal-container">
            <div class="modal-title">Login</div>
            <form id="login">
                <input type="text" name="name" placeholder="your name">
                <input type="text" name="password" placeholder="your password">  
                <button style="display: none;">Done</button>              
            </form>
        </div>
    </div>
</body>